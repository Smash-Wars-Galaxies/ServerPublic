{
    "$schema": "https://raw.githubusercontent.com/LuaLS/vscode-lua/master/setting/schema.json",
    "diagnostics": {
        "enable": true,
        "workspaceDelay": -1,
        "workspaceEvent": "None",
        "disable": ["lowercase-global"],
        "neededFileStatus": {
            "invisible": "None!"
        }
    },
    "workspace": {
        "maxPreload": 20000,
        "library": [
            ".definitions/"
        ],
        "ignoreDir": [
            "managers/resource_manager_spawns.lua",
            "commands",
            "loot",
            "mobile",
            "object",
            "screenplays"
        ]
    },
    "runtime.version": "Lua 5.3"
}